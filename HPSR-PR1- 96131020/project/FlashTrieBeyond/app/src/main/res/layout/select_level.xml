<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ario.flashtriebeyond.customView.CustomTextView
                    android:id="@+id/txtErrorDialogText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:lineSpacingExtra="5dp"
                    android:minHeight="60dp"
                    android:text="لطفا دو شماره آخر شماره دانشجویی را وارد کنید"
                    android:textColor="#000000"
                    android:textSize="12dp"/>

                <LinearLayout
                    android:id="@+id/lay_level0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ario.flashtriebeyond.customView.CustomTextView
                        android:id="@+id/txtErrorDialogText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:minHeight="60dp"
                        android:text="level 0"
                        android:textColor="#000000"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ario.flashtriebeyond.customView.CustomTextView
                        android:id="@+id/txtErrorDialogText21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:minHeight="60dp"
                        android:text="level 1"
                        android:textColor="#000000"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ario.flashtriebeyond.customView.CustomTextView
                        android:id="@+id/txtErrorDialogText221"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:minHeight="60dp"
                        android:text="level 2"
                        android:textColor="#000000"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_all_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ario.flashtriebeyond.customView.CustomTextView
                        android:id="@+id/txtErrorDialogText211"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:minHeight="60dp"
                        android:text="all"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:visibility="gone"/>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/scroll"
            android:layout_marginTop="5dp"
            android:background="#dddddd" />

        <Button
            android:id="@+id/btnErrorDialog"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView61"
            android:text="cancel"
            android:textSize="11dp"/>
    </RelativeLayout>
</LinearLayout>